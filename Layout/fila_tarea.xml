<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:cardBackgroundColor="@android:color/holo_orange_light"
            app:cardCornerRadius="10dp" app:contentPadding="10dp" app:cardElevation="10dp"
            android:layout_margin="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvTitulo" android:textSize="18sp"
                    android:textColor="@android:color/background_dark" android:fontFamily="monospace"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvFecha" android:textSize="18sp"
                    android:textColor="@android:color/background_dark" android:fontFamily="monospace"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
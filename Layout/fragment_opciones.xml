<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Opciones" android:orientation="vertical" android:padding="8dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/progressBar" android:layout_weight="1" tools:visibility="invisible"/>
        <TextView
                android:text="@string/colorfondo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1"
                android:textAlignment="textEnd" android:textColor="@android:color/black"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/spinnerColores"
        />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/recyclerEventos">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>